  <!--Css - I don't understand it yet-->
          /* 
  We collapse the borders of each cell. 
  By default, each cell has its own borders 
  which are not connected.
*/
table {
  border-collapse: collapse;
  margin: 0 auto;
  margin-top: 30px;
  font-family: Arial, sans-serif;
}

/* 
  Add a border and padding to the cells, 
  the distance from the content to the border.
*/
table th,
table td {
  padding: 10px;
  border: 3px solid #ff8a00;
  text-align: center;
}

/* Style for table header row */
thead th {
  background-color: #f2f2f2;
  font-weight: bold;
  text-transform: uppercase;
}

/* Alternate row background color */
tbody tr:nth-child(even) {
  background-color: #f2f2f2;
}

/* Hover effect on table rows */
tbody tr:hover {
  background-color: #ffd699;
}

/* Text styling for cells */
table th {
  font-size: 16px;
  color: #333;
}

table td {
  font-size: 14px;
  color: #555;
}

/* Emphasize wage */
table td:nth-child(3) {
  font-weight: bold;
  color: #ff8a00;
}
